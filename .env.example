# MYSQL
MYSQL_HOSTNAME="XXXXX"
MYSQL_ROOT_PASSWORD="XXXXX"
MYSQL_DATABASE="XXXXX"
MYSQL_USER="XXXXX"
MYSQL_PASSWORD="XXXXX"
MYSQL_PORT="XXXXX"

DATABASE_URL="mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_PASSWORD}:${MYSQL_PORT}/${MYSQL_DATABASE}"

COOKIE_NAME=__token
COOKIE_EXPIRES=86400000 # 1 day
COOKIE_REMEMBER_ME_EXPIRES=604800000 # 1 week

JWT_SECRET=superdupersecret
